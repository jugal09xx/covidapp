<%- include("partials/header") %>

<div class="container body">
	<h1 class="headers">
		Latest Updates 
	</h1>
	<div class="row">
		<% newsData["articles"].forEach(function(news){ %>
		<div class="col-lg-6 col-md-6 col-sm-5 col-xs-12">
			<div class="card" style="width: 22rem;">
			  <div class="card-body">
			    <img class="img" src="<%= news["urlToImage"] %>" class="card-img-top" alt="...">
				<h5 class="card-title" style="text-align: left;"><%= news["title"] %></h5>
				<p class="card-text text-muted" style="text-align: left;"><%= news["publishedAt"].toString().substring(0,10) %> | <%= news["source"]["name"]%></p>
				<p class="card-text text-muted" style="text-align: justify;"><%= news["description"] %>...</p>	  
				<a href="<%= news["url"] %>" class="btn btn-submit">Read More</a>
			  </div>
			</div>
		</div>
		<% }); %>
	</div>
		
</div>

